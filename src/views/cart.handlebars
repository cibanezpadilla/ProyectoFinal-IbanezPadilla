<h2 id="user_welcome">Welcome, {{user.name}}</h2>
<p id="user-email">Email: {{user.email}}</p>
<p id="user-role">User role: {{user.role}}</p>

<div class="contenedor-botones">
        <button id="cart_button"><a href="/cart/{{user.cart}}">Your cart</a></button>    
        <button id="signout_button"><a href="/api/sessions/signout">SIGN OUT</a></button>
</div>

<h2 id="cart-title" data-user-cart="{{cid}}">CART DETAIL</h2>

<div id="cart-container">
    <div id="products-container">
    </div>    
    <hr>
    <div class="div-total-and-button">
        <div id="total-container"></div>
        <button id="buy-cart-button">BUY</button>
    </div>
    
</div>
<br>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/cart.js"></script>